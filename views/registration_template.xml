<odoo>

	<template id="registration_form">
		<t t-call="portal.frontend_layout">
			<t t-set="title">Registration</t>
			<div class="container">
				<h2>Registration Form</h2>
				<div class="col-md-8">
					<ul class="nav nav-tabs">
						<li class="nav-item active"><a href="#user" class="nav-link active" data-toggle="tab">User</a></li>
						<li class="nav-item"><a href="#service_provider" class="nav-link" data-toggle="tab">Service Provider</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="user">
							<form action="/reg/add/user" method="post">
								<div class="form-group">
									<label>Name</label>
									<input type="text" class="form-control" name="name" placeholder="Enter Name" />
								</div>
								<div class="form-group">
									<label>Email</label>
									<input type="text" class="form-control" name="email" placeholder="Enter Email" />
								</div>
								<div class="form-group">
									<label>Password</label>
									<input type="password" class="form-control" name="password" placeholder="********" />
								</div>
								<input type="submit" class="btn btn-primary" value="Submit" />
							</form>
						</div>
						<div class="tab-pane" id="service_provider">
							<form action="/reg/add/service_provider" method="post">
								<div class="form-group">
									<label>Name</label>
									<input type="text" class="form-control" name="name" placeholder="Enter Name" />
								</div>
								<div class="form-group">
									<label>Shop Name</label>
									<input type="text" class="form-control" name="shop_name" placeholder="Enter Shop Name" />
								</div>
								<div class="form-group">
									<label>Email</label>
									<input type="text" class="form-control" name="email" placeholder="Enter Email" />
								</div>
								<div class="form-group">
									<label>Password</label>
									<input type="password" class="form-control" name="password" placeholder="********" />
								</div>
								<div class="form-group">
									<label>Currency</label>
									<select class="form-control" name="currency">
										<t t-foreach="currencys" t-as="currency">
											<option t-attf-value="{{ currency.name }}"><t t-esc="currency.name"/></option>
										</t>
									</select>
								</div>
								<input type="submit" class="btn btn-primary" value="Submit" />
							</form>
						</div>
					</div>
				</div>
			</div>
		</t>
	</template>
</odoo>
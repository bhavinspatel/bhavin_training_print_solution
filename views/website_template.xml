<odoo>
	<template id="quotation_list">
		<t t-call="website.layout">
			<t t-set="title">Quotation</t>
			<div class="container">
				<h2><center>Quotation List</center></h2><h3><a class="align-right" t-attf-href="/quotation/new/">New Quotation</a></h3>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Start Date</th>
							<th>End Date</th>
							<th>State</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
					<t t-foreach="quotations" t-as="quotation">
						<tr>
							<td><p><t t-esc="quotation.name"/></p></td>
							<td><p><t t-esc="quotation.start_date"/></p></td>
							<td><p><t t-esc="quotation.end_date"/></p></td>
							<td><p><t t-esc="quotation.state"/></p></td>
							<td>
								<a t-attf-href="/quotation/edit/{{ slug(quotation) }}"><i class="fa fa-edit" style='font-size:24px'></i></a>
								<a t-attf-href="/quotation/delete/{{ slug(quotation) }}"><i class="fa fa-trash" style='font-size:24px'></i></a>
							</td>
						</tr>
					</t>
					</tbody>
				</table>
			</div>
		</t>
	</template>

	<template id="create_and_edit_quotation">
		<t t-call="website.layout">
			<t t-set="title">Quotation</t>
			<div class="container">
				<h2>Quotation Form</h2>
				<form t-attf-action="/quotation/data/#{quotation.id if quotation else ''}" method="post">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" name="name" placeholder="Enter Name" t-attf-value="#{quotation.name if quotation else ''}" />
					</div>
					<div class="form-group">
						<label>Page Size</label>
						<input type="text" class="form-control" name="page_size" placeholder="Enter Page Size" t-attf-value="#{quotation.page_size if quotation else ''}"/>
					</div>
					<div class="form-group">
						<label>Start Date</label>
						<input type="date" class="form-control" name="start_date" placeholder="Enter Start Date" t-attf-value="#{quotation.start_date if quotation else ''}"/>
					</div>
					<div class="form-group">
						<label>End Date</label>
						<input type="date" class="form-control" name="end_date" placeholder="Enter End Date" t-attf-value="#{quotation.end_date if quotation else ''}"/>
					</div>
					<div class="form-group">
						<label>State</label>
						<select class="form-control" name="state">
							<t t-if="quotation and quotation.state == 'pending'">
								<option value="pending" t-att="['selected', '']">Pending</option>
							</t>
							<t t-else="">
								<option value="pending">Pending</option>
							</t>
							<t t-if="quotation and quotation.state == 'progress'">
								<option value="progress" t-att="['selected', '']">In Progress</option>
							</t>
							<t t-else="">
								<option value="progress">In Progress</option>
							</t>
							<t t-if="quotation and quotation.state == 'done'">
								<option value="done" t-att="['selected', '']">Done</option>
							</t>
							<t t-else="">
								<option value="done">Done</option>
							</t>
						</select>
					</div>
					<input type="submit" class="btn btn-primary" t-attf-value="#{'Update' if quotation else 'Create'}" />
				</form>
			</div>
		</t>
	</template>

	<template id="print_image">
		<t t-call="website.layout">
			<t t-set="title">Quotation</t>
			<div class="container">
				<form action="/image/store" method="post">
					<input type="file" name="image" class="form-control"/>
					<input type="submit" value="Upload" class="btn btn-primary"/>
				</form>
				<t t-foreach="images" t-as="i">
					<a t-attf-href="/image/delete/{{ slug(i) }}">
						<img t-attf-src="data:image/*; base64,{{i.image}}" height="300" width="300" style="margin: 20px"/>
					</a>
				</t>
			</div>
		</t>
	</template>
</odoo>
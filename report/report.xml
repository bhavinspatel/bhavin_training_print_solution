<odoo>
	<data>
		
		<template id="inquiry_report">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<t t-foreach="docs" t-as="doc">
						<div class="page">
							<h2>Inquiry Details</h2>
								<p>Inquiry Name : <span t-field="doc.name" /></p>
								<p>Object Name : <span t-field="doc.object_id" /></p>
								<p>Attachment : <img t-attf-src="data:image/*; base64,{{doc.attachment}}" /></p>
								<p>Provider Name : <span t-field="doc.provider_id" /></p>
								<p>Delivery Location : <span t-field="doc.location" /></p>
								<p>Remark : <span t-field="doc.remark" /></p>
						</div>
					</t>
				</t>
			</t>
		</template>

		<report
			id="action_inquiry_report"
			model="inquiry.inquiry"
			string="Print Inquiry"
			report_type="qweb-pdf"
			name="bhavin_training_print_solution.inquiry_report"
			file="bhavin_training_print_solution.inquiry_report"
			attachment_use="True"/>

	</data>
</odoo>